{
	//required
	"manifest_version" : 2,
	"name" : "Cornea",
	"version" : "1.0",
  "background": {
      "persistent": false,
      "scripts": ["jquery.js","background.js" ]
   },
	

	//recommended
	"description" : "Provides relief from eye strain while using chrome for longer time",
	"icons" : { "128": "cornea_128.png",
              "64": "cornea_64.png",
              "32": "cornea_32.png" },
	"browser_action": {
      "default_icon": "cornea_128.png",
      "default_popup": "popup.html",
      "default_title": "Corona"
    },
	
	"incognito": "spanning",
	

   "permissions": [
    "notifications","tabs","storage"
  ],
   


   "content_scripts": [ {
      "all_frames": true,
      "js": [ "jquery.js", "content.js" ],
      "matches": [ "http://*/*",
      				"https://*/*" ],
      "run_at": "document_start"
   } ]

} 